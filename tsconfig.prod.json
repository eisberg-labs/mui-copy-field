{
  "compilerOptions": {
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationMap": true,
    "jsx": "react",
    "declarationDir": "lib",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "./src/index.ts",
    "./src/**/*.tsx"
  ],
  "exclude": ["./src/**/*.spec.tsx", "./src/**/*.stories.tsx"]
}

